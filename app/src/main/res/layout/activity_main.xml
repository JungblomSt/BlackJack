<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/poker_background">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:text="BlackJack"
        android:textColor="@color/fontcolor_main"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dealer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:text="Dealer:"
        android:textSize="20sp"
        android:textColor="@color/fontcolor_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <LinearLayout
        android:id="@+id/card_layout_dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_text">

        <include layout="@layout/cards_card"/>
<!--        <TextView-->
<!--            android:id="@+id/tv_dealer_card_1"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="100dp"-->
<!--            android:text="DealerCard1"-->
<!--            android:textColor="@color/fontcolor_main" />-->

<!--        <TextView-->
<!--            android:id="@+id/tv_dealer_card_2"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginStart="24dp"-->
<!--            android:text="DealerCard2"-->
<!--            android:textColor="@color/fontcolor_main"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dealer_sum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:textColor="@color/fontcolor_main"
        android:text="Sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_layout_dealer" />

    <TextView
        android:id="@+id/tv_dealer_sum_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:text="0"
        android:textColor="@color/fontcolor_main"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_sum_text" />

    <TextView
        android:id="@+id/tv_player_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:text="Player:"
        android:textSize="20sp"
        android:textColor="@color/fontcolor_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_sum_num" />

    <LinearLayout
        android:id="@+id/card_layout_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_text">

        <include layout="@layout/cards_card"/>

<!--        <TextView-->
<!--            android:id="@+id/tv_player_card_1"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:textColor="@color/fontcolor_main"-->
<!--            android:text="PlayerCard1" />-->

<!--        <TextView-->
<!--            android:id="@+id/tv_player_card_2"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginStart="24dp"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:textColor="@color/fontcolor_main"-->
<!--            android:text="PlayerCard2"-->
<!--            app:layout_constraintStart_toEndOf="@+id/tv_player_card_1"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/tv_player_text" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/tv_player_sum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:textColor="@color/fontcolor_main"
        android:text="Sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_layout_player" />

    <TextView
        android:id="@+id/tv_player_sum_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amarante"
        android:text="0"
        android:textColor="@color/fontcolor_main"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_sum_text" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_sum_num">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttoncollor_main"
            android:text="Draw"
            android:textColor="@color/fontcolor_main"
            app:cornerRadius="8dp"
            app:elevation="6dp"
            app:strokeColor="@color/btn_stroke_color"
            app:strokeWidth="2dp"
            tools:layout_editor_absoluteX="103dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/buttoncollor_main"
            android:text="Stand"
            android:textColor="@color/fontcolor_main"
            app:cornerRadius="8dp"
            app:elevation="6dp"
            app:strokeColor="@color/btn_stroke_color"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:text="Result"
        android:textColor="@color/fontcolor_main"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_new_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_layout" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/buttoncollor_main"
        android:text="New Game"
        android:textColor="@color/fontcolor_main"
        app:cornerRadius="8dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/btn_stat"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/btn_stroke_color"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/buttoncollor_main"
        android:text="Statistics"
        android:textColor="@color/fontcolor_main"
        app:cornerRadius="8dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/btn_stroke_color"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>