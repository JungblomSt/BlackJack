<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <ImageView
        android:id="@+id/iv_background_stat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/poker_background_blue" />

    <TextView
        android:id="@+id/tv_title_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:text="BlackJack"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_victories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:text="@string/wins"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_loses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title_stats"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_victories_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/amarante"
        android:text="0"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/tv_victories"
        app:layout_constraintTop_toTopOf="@+id/tv_victories" />

    <TextView
        android:id="@+id/tv_loses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:text="@string/losses"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_victories"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="@+id/tv_victories"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loses_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/amarante"
        android:text="0"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/tv_loses"
        app:layout_constraintTop_toTopOf="@+id/tv_loses" />

    <TextView
        android:id="@+id/tv_tie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:text="@string/tie"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_loses"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/tv_loses"
        app:layout_constraintTop_toBottomOf="@+id/tv_loses" />

    <TextView
        android:id="@+id/tv_tie_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/amarante"
        android:text="0"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/tv_tie"
        app:layout_constraintTop_toTopOf="@+id/tv_tie" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stat_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/button_color_main"
        android:text="@string/back"
        android:textColor="@color/font_color_main"
        app:cornerRadius="8dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/btn_stroke_color"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stat_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/button_color_main"
        android:text="@string/reset"
        android:textColor="@color/font_color_main"
        app:cornerRadius="8dp"
        app:elevation="6dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/btn_stroke_color"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>