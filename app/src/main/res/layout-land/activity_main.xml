<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/poker_background">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/amarante"
        android:text="BlackJack"
        android:textColor="@color/font_color_main"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dealer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/amarante"
        android:text="@string/dealer"
        android:textColor="@color/font_color_main"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <LinearLayout
        android:id="@+id/card_layout_dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/tv_dealer_sum_num"
        app:layout_constraintStart_toStartOf="@+id/tv_dealer_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_text">

        <include layout="@layout/cards_card" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_dealer_sum_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/amarante"
        android:text="0"
        android:textColor="@color/font_color_main"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_dealer_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_player_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/amarante"
        android:text="@string/player"
        android:textColor="@color/font_color_main"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_dealer_sum_num"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/card_layout_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/tv_player_sum_num"
        app:layout_constraintStart_toStartOf="@+id/tv_player_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_text">

        <include layout="@layout/cards_card" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_player_sum_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/amarante"
        android:text="0"
        android:textColor="@color/font_color_main"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_player_text"
        app:layout_constraintTop_toTopOf="@+id/tv_player_text" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/tv_player_sum_num"
        app:layout_constraintStart_toStartOf="@id/tv_player_text"
        app:layout_constraintTop_toBottomOf="@+id/card_layout_player">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_color_main"
            android:text="@string/draw"
            android:textColor="@color/font_color_main"
            app:cornerRadius="8dp"
            app:elevation="6dp"
            app:strokeColor="@color/btn_stroke_color"
            app:strokeWidth="2dp"
            tools:layout_editor_absoluteX="103dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/button_color_main"
            android:text="@string/stand"
            android:textColor="@color/font_color_main"
            app:cornerRadius="8dp"
            app:elevation="6dp"
            app:strokeColor="@color/btn_stroke_color"
            app:strokeWidth="2dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"

        android:text="@string/result"
        android:textColor="@color/font_color_main"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_stat"
        app:layout_constraintEnd_toStartOf="@+id/btn_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_layout_dealer" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color_main"
        android:text="@string/new_game"
        android:textColor="@color/font_color_main"
        app:cornerRadius="8dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_layout"
        app:layout_constraintStart_toStartOf="@+id/btn_layout"
        app:layout_constraintTop_toBottomOf="@+id/btn_layout"
        app:strokeColor="@color/btn_stroke_color"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/button_color_main"
        android:text="@string/statistics"
        android:textColor="@color/font_color_main"
        app:cornerRadius="8dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/btn_stroke_color"
        app:strokeWidth="2dp" />


    <ImageButton
        android:id="@+id/ib_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green"
        android:clickable="true"
        android:contentDescription="@string/settings"
        android:src="@drawable/settings_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/settingsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000"
        android:visibility="gone"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/settingsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>